{
  "manifest_version": 3,
  "name": "Unfake Extension",
  "version": "1.0",
  "description": "Detects fake news on X",
  "permissions": ["storage", 
  "activeTab", 
  "scripting", "tabs", "http://localhost:5000/", "http://localhost:5173/", "https://tkh-server2.access.ly:5000/*", "https://tkh-server2.access.ly:5001/*"],
  "host_permissions": ["https://x.com/*", "https://twitter.com/*", "https://tkh-server2.access.ly:5000/*", "https://tkh-server2.access.ly:5001/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "Logo2.png",
      "48": "Logo2.png",
      "128": "Logo2.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": ["content.js"],
      "css": ["overlay.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["overlay.css"],
      "matches": ["https://x.com/*", "https://twitter.com/*"]
    }
  ],
  "content_security_policy": {
  "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
